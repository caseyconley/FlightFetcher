    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch FlightFetcher w/ Default Args",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/app.js",
            "args": [
                "12", //start time hour for window that app is allowed to make requests to Flight API (24-hr)
                "20", //end time hour for window that app is allowed to make requests to Flight API (24-hr)
                "750", //altitude threshold (in feet)
                "210" //request interval (in seconds)
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch FlightFetcher w/ No Args",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/app.js",
        }
    ]
}